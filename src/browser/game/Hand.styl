.hand-container
  position absolute
  left 16px
  top 8px
  margin 24px

  .card
    width 180px
    height 180px
    box-shadow 0px 3px 6px rgba(0,0,0,0.23), 3px 3px 6px rgba(0,0,0,0.23)
    padding 24px
    position relative
    cursor pointer

    .chip
      width 40px
      height 40px

    .actions
      position absolute
      width 180px
      margin 0px -24px

      button
        width 20px
        height 20px
        border-radius 50%
        border 0
        background none
        padding 0
        line-height 18px
        font-size 12px

      .discard
        background-color red

      .play
        background-color green
        position absolute
        right 0px

    .head
      display flex
      justify-content center
      margin-top 16px

    .lower
      display flex
      justify-content center
      padding-top 18px

      .chip
        float left

        &:nth-child(2)
          position relative
          top 18px
