.hand-container
  position absolute
  left 16px
  top 8px
  margin 24px

  .card
    width 180px
    height 180px
    box-shadow 0px 3px 6px rgba(0,0,0,0.23), 3px 3px 6px rgba(0,0,0,0.23)
    padding 24px
    position relative
    cursor pointer

    .chip
      float left
      width 40px
      height 40px

      &:first-child
        //use flex to align
        float none
        position relative
        left 50%
        margin-left -26px
        margin-bottom 18px

      &:nth-child(3)
        position relative
        top 36px
