.board
  height 100%

  .board-flex
    display flex
    height 100%
    justify-content center

  .core-container
    position relative
    height 100%
    margin-top 100px

  .chip-stack-container
    height 300px
    width 300px
    border 0px solid #000
    position relative

  .chip-stack
    width 80px
    height 80px
    position absolute
    border 1px solid rgba(0,0,0,0.5)
    border-radius 50%
    cursor pointer
    z-index 100

    &.top-left
      top 0
      left 0

    &.bottom-left
      bottom 0
      left 0

    &.top-right
      top 0
      right 0

    &.bottom-right
      bottom 0
      right 0

    &.center
      left 50%
      top 50%
      margin-left -40px
      margin-top -40px

  .chip
    box-shadow 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)
    width 80px
    height 80px
    border-radius 50%
    cursor pointer

    &.chip-red
      background-color #D50000 // red A700

    &.chip-blue
      background-color #283593 // indigo 800

    &.chip-green
      background-color #4CAF50 // green 500

    &.chip-yellow
      background-color #FDD835 // yellow 600

  .chip-stack-container-rotated
    transform rotate(45deg)
    position absolute
    top 0
    left 0

    .chip-stack
      transform rotate(-45deg)
