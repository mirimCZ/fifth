// Remember to use rems and ems. http://css-tricks.com/rems-ems.

@import '../../../node_modules/normalize.css/normalize.css'

// http://phonegap-tips.com/articles/essential-phonegap-css-webkit-tap-highlight-color.html
*
  -webkit-tap-highlight-color rgba(0,0,0,0)

// Goodness.
*, ::after, ::before
  box-sizing border-box

html,
body
  height 100%

body {
  color #333
  font-family 'Segoe UI', 'Lucida Grande','Ubuntu','sans-serif'
  font-size 16px
  line-height 1.5
}

fieldset
  border 0

input[type=text]
input[type=password]
  border 0
  border-bottom 1px solid #EEE
  padding 12px

button[type=submit]
  padding 12px 24px
  border 0
  color #EEE
  font-weight bold
  box-shadow 0 1px 6px rgba(0,0,0,0.16), 0 1px 6px rgba(0,0,0,0.23)
  background-color #4CAF50 // green 500 TODO: choose diferent primary color, use variable

#app
  margin 0

  > header
    h1
      margin-bottom 0
    ul
      li
        font-size 1em

  > footer
    font-size .75em
    font-style italic

  :focus
    outline-style none

  a
    color #346392
    text-decoration none

    &:hover:not(.active)
      text-decoration underline

    &.active
      font-weight bold
